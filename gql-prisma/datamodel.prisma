type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  published: Boolean
  title: String
  body: String
  author: User!
  comments: [Comment!]!
}

type Comment {
  id: ID! @unique
  text: String!
  commentor: User!
  post: Post!
}
